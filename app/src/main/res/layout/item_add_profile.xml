<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="horizontal"
    android:paddingTop="15dp" android:paddingLeft="16dp"
    android:paddingRight="23dp" android:background="@color/very_light_pink_two">

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icn_leader" />
    <TextView
        android:id="@+id/name"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#111111"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="이의택" />
    <CheckBox
        android:id="@+id/btn_chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:background="@color/transport2"
        android:button="@drawable/check"/>
</LinearLayout>